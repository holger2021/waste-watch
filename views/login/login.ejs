<div class="auth-wrapper d-flex no-block justify-content-center align-items-center position-relative"
     style="background:url(../assets/images/big/auth-bg.jpg) no-repeat center center;">
    <div class="auth-box row">
        <div class="col-lg-7 col-md-5 modal-bg-img" style="background-image: url(../assets/images/login/wastewatch.png);">
        </div>
        <div class="col-lg-5 col-md-7 bg-white">
            <div class="p-3">
                <br>
                <form class="mt-4" action="/" method="post">
                    <div class="row">
                        <div class="col-lg-12">
                            <h2 class="text-center">
                                <span class="badge badge-info">Bienvenido</span>
                            </h2>
                            <hr>
                            <%- include('../partials/messages') %>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="text-dark" for="_indicador">Codigo</label>
                                <input readonly type="text" id="_indicador" name="_indicador" class="form-control teclado_text">
                            </div>
                        </div>
                        <div class="col-lg-12">
                                <table class="table table_teclado">
                                    <tbody>
                                        <tr>
                                            <td>1</td>
                                            <td>2</td>
                                            <td>3</td>
                                        </tr>
                                        <tr>
                                            <td>4</td>
                                            <td>5</td>
                                            <td>6</td>
                                        </tr>
                                        <tr>
                                            <td>7</td>
                                            <td>8</td>
                                            <td>9</td>
                                        </tr>
                                        <tr>
                                            <td colspan="2">0</td>
                                            <td><img class="btn_delete" src="../assets/images/borrar.png"></td>
                                        </tr>
                                    </tbody>
                                </table>
                        </div>
                        <div class="col-lg-12 text-center">
                            <button type="submit" class="btn btn-block btn-dark">Ingresar</button>
                        </div>
                        <div class="col-lg-12 text-center mt-5">
                            <hr>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
